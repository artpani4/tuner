{
  "name": "@artpani/tuner",
  "version": "0.5.0",
  "exports": "./mod.ts",
  "workflows": {
    "UpdateSemverDeployJsr": {
      "versionsFilePath": "./source/versions.ts"
    }
  },
  "test": {
    "files": {
      "include": [
        "tests/"
      ]
    }
  },
  "tasks": {
    "example": "deno run --allow-all example/config/main.ts",
    "example2": "deno run --allow-all example2/config_ololo/main.ts",
    "check": "CONFIG=app deno run --allow-all config/checkConfig.ts",
    "gen": "deno run --allow-all cli/mod.ts"
  },
  "lint": {
    "files": {
      "include": [
        "src/"
      ]
    },
    "rules": {
      "tags": [
        "recommended"
      ],
      "include": [
        "ban-untagged-todo"
      ],
      "exclude": []
    }
  },
  "fmt": {
    "options": {
      "useTabs": false,
      "lineWidth": 70,
      "indentWidth": 2,
      "singleQuote": true,
      "proseWrap": "preserve"
    },
    "files": {
      "exclude": [
        ".vacode",
        ".idea",
        ".fleet",
        ".git"
      ]
    }
  },
  "compilerOptions": {
    "allowJs": false,
    "strict": true,
    "alwaysStrict": true,
    "useUnknownInCatchVariables": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noUnusedParameters": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "exactOptionalPropertyTypes": true
  },

  "imports": {
    "@artpani/tuner": "jsr:@artpani/tuner@^0.4.0",
    "@libs/std": "jsr:@libs/std@^2024.7.24",
    "@std/dotenv": "jsr:@std/dotenv@^0.225.0",
    "@std/fs": "jsr:@std/fs@^1.0.0",
    "@std/path": "jsr:@std/path@^1.0.2",
    "@vseplet/luminous": "jsr:@vseplet/luminous@^1.0.5"
  }
}
